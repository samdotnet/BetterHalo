{
    "manifest_version": 3,
    "name": "BetterHalo",
    "author": "samh",
    "version": "1.0",
    "description": "Filters out Halo sponsor ad garbage.",
    "permissions": ["activeTab"],
    "content_scripts": [
      {
        "matches": ["https://halo.gcu.edu/*"],
        "js": ["scripts/content.js"]
      }
    ],
    "action": {
      "default_popup": "index.html"
    },
    "icons": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  }
  